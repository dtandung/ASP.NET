@model _19T1021044.DomainModels.Category
@{

}


<div class=" box box-primary">
    <div class=" box-body">
        <form action="~/Category/Save" method="post">
            <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
            <div class="form-group">
                <label>Tên Nhà Loại Hàng:</label>
                <input type="text" class="form-control" id="CategoryName" name="CategoryName" value="@Model.CategoryName" autofocus>
            </div>

            <div class="form-group">
                <label>Chi Tiết:</label>
                <textarea id="Desciption" name="Description" class="form-control" rows="3" placeholder="Enter ..." autofocus>@Model.Description</textarea>
            </div>


            <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-floppy-disk"></i> Lưu Dữ Liệu</button>
            <a href="~/Category" class="btn btn-warning"> Quay Lại</a>
        </form>
    </div>
</div>

