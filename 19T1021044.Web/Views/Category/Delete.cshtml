@model _19T1021044.DomainModels.Category
@{
    ViewBag.Title = "Xoá Loại Hàng";
}


<div class="box box-danger">
    <div class=" box-body">
        <form action="~/Category/Delete/@Model.CategoryID" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Loại Hàng:</label>
                <p class="col-sm-10 form-control-static">@Model.CategoryName</p>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Chi Tiết:</label>
                <p class="col-sm-10 form-control-static">@Model.Description</p>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Đồng ý xoá</button>
                    <a href="~/Category" class="btn btn-warning"> Quay Lại</a>
                </div>
            </div>
        </form>
    </div>
</div>

