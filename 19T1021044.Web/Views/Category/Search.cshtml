@model _19T1021044.Web.Models.CategorySearchOutput
@{
    Layout = null;
}
<p> Có <b>@string.Format("{0:N0}", Model.RowCount)</b> bản ghi trong tổng số <b>@string.Format("{0:N0}", Model.PageCount)</b> trang</p>
<table class=" table table-bordered table-hover table-striped">
    <thead>
        <tr class="bg-primary ">
            <th class="text-center">
                Tên Loại Hàng
            </th>
            <th class="text-center">
                Chi Tiết
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr class="text-center">
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td>
                    <a href="~/Category/Edit/@item.CategoryID" class="btn-sm btn-primary" title="Sửa"><i class="glyphicon glyphicon-edit"></i></a>
                    <a href="~/Category/Delete/@item.CategoryID" class="btn-sm btn-danger" title="Xoá"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }

    </tbody>
</table>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascripts:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>