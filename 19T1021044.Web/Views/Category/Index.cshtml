@model IEnumerable<_19T1021044.DomainModels.Category>
@{
    ViewBag.Title = "Quản Lý Phân Loại Hàng";
}


<div class="box box-primary">
    <!-- form start -->
    <div class="box-body">
        <form>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" value="@ViewBag.SearchValue" autofocus>
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit" style="margin-right:4px">
                        <i class="glyphicon glyphicon-search"></i>Tìm Kiếm
                    </button>
                    <a href="~/Category/Create" class="btn btn-success btn-flat">
                        <i class="glyphicon glyphicon-plus"></i>Bổ Sung
                    </a>
                </div>
            </div>
        </form>
        <p> Có <b>@ViewBag.RowCount</b> bản ghi trong tổng số <b>@ViewBag.PageCount</b> trang</p>
        <table class=" table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-success ">
                    <th class="text-center">
                        Tên Loại Hàng
                    </th>
                    <th class="text-center">
                        Chi Tiết
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                        <td>
                            <a href="~/Category/Edit/@item.CategoryID" class="btn-sm btn-warning" title="Sửa"><i class="glyphicon glyphicon-edit"></i></a>
                            <a href="~/Category/Delete/@item.CategoryID" class="btn-sm btn-danger" title="Xoá"><i class="glyphicon glyphicon-trash"></i></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="text-center">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.PageCount; i++)
                {
                    if (i == ViewBag.Page)
                    {
                        <li class="active"><a href="#">@i</a></li>
                    }
                    else
                    {
                        <li><a href="~/Supplier?page=@i&searchvalue=@ViewBag.SearchValue">@i</a></li>
                    }
                }
            </ul>
        </div>
    </div>
</div>


