
@{
	ViewBag.Title = "Quản Lý Phân Loại Hàng";
}


<div class="box box-primary">
	<!-- form start -->
	<div class="box-body">
		<form>
			<div class="input-group">
				<input type="text" class="form-control" placeholder="Search">
				<div class="input-group-btn">
					<button class="btn btn-info" type="submit" style="margin-right:4px">
						<i class="glyphicon glyphicon-search"></i>Tìm Kiếm
					</button>
					<a href="~/Category/Create" class="btn btn-success btn-flat">
						<i class="glyphicon glyphicon-plus"></i>Bổ Sung
					</a>
				</div>
			</div>
		</form>
		<p> Có <b>100</b> bản ghi trong tổng số <b>10</b> trang</p>
		<table class=" table table-bordered table-hover table-striped">
			<thead>
				<tr class="bg-success ">
					<th class="text-center">
						Tên Loại Hàng
					</th>
					<th class="text-center">
						Chi Tiết
					</th>					
					<th>

					</th>
				</tr>
			</thead>
			<tbody>
				@for (int i = 1; i <= 20; i++)
				{
					<tr class="text-center">
						<td>Iphone 14</td>
						<td>Iphone 14 Deep Purple | 1TB</td>
						<td>
							<a href="~/Category/Edit" class="btn-sm btn-warning" title="Sửa"><i class="glyphicon glyphicon-edit"></i></a>
							<a href="~/Category/Delete" class="btn-sm btn-danger" title="Xoá"><i class="glyphicon glyphicon-trash"></i></a>
						</td>
					</tr>
				}

			</tbody>
		</table>
		<div class="text-center">
			<ul class="pagination">
				<li><a href="#">1</a></li>
				<li><a href="#">2</a></li>
				<li><a href="#">3</a></li>
				<li class="active"><a href="#">4</a></li>
				<li><a href="#">5</a></li>
			</ul>
		</div>
	</div>
</div>


