@model _19T1021044.DomainModels.Customer
@{
	ViewBag.Title = "Xoá Khách Hàng";
}


<div class="box box-danger">
	<div class=" box-body">
		<form action="~/Customer/Delete/@Model.CustomerID" method="post" class="form-horizontal">
			<div class="form-group">
				<label class="control-label col-sm-2">Tên Khách Hàng:</label>
				<p class="col-sm-10 form-control-static">@Model.CustomerName</p>
			</div>

			<div class="form-group">
				<label class="control-label col-sm-2">Tên Liên Hệ:</label>
				<p class="col-sm-10 form-control-static">@Model.ContactName</p>
			</div>

			<div class="form-group">
				<label class="control-label col-sm-2">Địa Chỉ:</label>
				<p class="col-sm-10 form-control-static">@Model.Address</p>
			</div>

			<div class="form-group">
				<label class="control-label col-sm-2">Quốc Gia:</label>
				<p class="col-sm-10 form-control-static">@Model.Country</p>
			</div>

			<div class="form-group">
				<label class="control-label col-sm-2">Thành Phố:</label>
				<p class="col-sm-10 form-control-static">@Model.City</p>
			</div>

			<div class="form-group">
				<label class="control-label col-sm-2">Mã Bưu Chính:</label>
				<p class="col-sm-10 form-control-static">@Model.PostalCode</p>
			</div>
			<div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (_19T1021044.BusinessLayers.CommonDataService.InUsedCustomer(Model.CustomerID))
                    {
                        <p style="color:red">Khách hàng này không thể xoá</p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Đồng ý xoá</button>
                    }
                    <a href="~/Customer" class="btn btn-warning"><i class="fa fa-ban"></i> Quay Lại</a>
                </div>
			</div>
		</form>
	</div>
</div>

