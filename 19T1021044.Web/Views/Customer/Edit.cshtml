@model _19T1021044.DomainModels.Customer
@{

}


<div class=" box box-primary">
	<div class=" box-body">
        <form action="~/Customer/Save" method="post">
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.CustomerID)
            <div class="form-group">
                <label>Tên Khách Hàng:</label>
                @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.CustomerName, "", new { @style = "color:#F00" })
            </div>

            <div class="form-group">
                <label>Tên Liên Hệ:</label>
                @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.ContactName, "", new { @style = "color:#F00" })
            </div>

            <div class="form-group">
                <label>Địa Chỉ:</label>
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.Address, "", new { @style = "color:#F00" })
            </div>

            <div class="form-group">
                <label>Quốc Gia:</label>
                @Html.DropDownListFor(m => m.Country,
                                      SelectListHelper.Countries(),
                                      new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Country, "", new { @style = "color:#F00" })
            </div>

            <div class="form-group">
                <label>Thành Phố:</label>
                @Html.TextBoxFor(m => m.City, new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.City, "", new { @style = "color:#F00" })
            </div>

            <div class="form-group">
                <label>Mã Bưu Chính:</label>
                @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.PostalCode, "", new { @style = "color:#F00" })
            </div>
            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-disk"></i> Lưu Dữ Liệu</button>
            <a href="~/Customer" class="btn btn-warning"><i class="fa fa-ban"></i> Quay Lại</a>
        </form>
	</div>
</div>

