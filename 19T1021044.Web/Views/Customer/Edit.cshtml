@model _19T1021044.DomainModels.Customer
@{

}


<div class=" box box-primary">
	<div class=" box-body">
        <form action="~/Customer/Save" method="post">
            <input type="hidden" name="CustomerID" value="@Model.CustomerID" />
            <div class="form-group">
                <label>Tên Khách Hàng:</label>
                <input type="text" class="form-control" id="CustomerName" name="CustomerName" value="@Model.CustomerName" autofocus>
            </div>

            <div class="form-group">
                <label>Tên Liên Hệ:</label>
                <input type="text" class="form-control" id="ContactName" name="ContactName" value="@Model.ContactName" autofocus>
            </div>

            <div class="form-group">
                <label>Địa Chỉ:</label>
                <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" autofocus>
            </div>

            <div class="form-group">
                <label>Quốc Gia:</label>
                <select class="form-control" id="Country" name="Country" autofocus>
                    @foreach (var item in _19T1021044.BusinessLayers.CommonDataService.ListOfCountries())
                    {
                        if (item.CountryName == Model.Country)
                        {
                            <option value="@item.CountryName" selected>@item.CountryName</option>
                        }
                        else
                        {
                            <option value="@item.CountryName">@item.CountryName</option>
                        }

                    }
                </select>
            </div>

            <div class="form-group">
                <label>Thành Phố:</label>
                <input type="text" class="form-control" id="City" name="City" value="@Model.City" autofocus>
            </div>

            <div class="form-group">
                <label>Mã Bưu Chính:</label>
                <input type="text" class="form-control" id="PostalCode" name="PostalCode" value="@Model.PostalCode" autofocus>
            </div>
            <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-floppy-disk"></i> Lưu Dữ Liệu</button>
            <a href="~/Customer" class="btn btn-warning"> Quay Lại</a>
        </form>
	</div>
</div>

