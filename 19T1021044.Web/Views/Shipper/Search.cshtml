@model _19T1021044.Web.Models.ShipperSearchOutput
@{
    Layout = null;
}
<p> Có <b>@string.Format("{0:N0}", Model.RowCount)</b> bản ghi trong tổng số <b>@string.Format("{0:N0}", Model.PageCount)</b> trang</p>
<table class=" table table-bordered table-hover table-striped">
    <thead>
        <tr class="bg-success ">
            <th class="text-center">
                Tên Người Giao Hàng
            </th>
            <th class="text-center">
                Số Điện Thoại
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr class="text-center">
                <td>@item.ShipperName</td>
                <td>@item.Phone</td>
                <td>
                    <a href="~/Shipper/Edit/@item.ShipperID" class="btn-sm btn-warning" title="Sửa"><i class="glyphicon glyphicon-edit"></i></a>
                    <a href="~/Shipper/Delete/@item.ShipperID" class="btn-sm btn-danger" title="Xoá"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }

    </tbody>
</table>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascripts:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>
