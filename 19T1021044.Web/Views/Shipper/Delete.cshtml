@model _19T1021044.DomainModels.Shipper
@{
    ViewBag.Title = "Xoá Người Giao Hàng";
}



<div class="box box-danger">
    <div class=" box-body">
        <form action="~/Shipper/Delete/@Model.ShipperID" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Người Giao Hàng:</label>
                <p class="col-sm-10 form-control-static">@Model.ShipperName</p>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Số Điện Thoại</label>
                <p class="col-sm-10 form-control-static">@Model.Phone</p>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (_19T1021044.BusinessLayers.CommonDataService.InUsedShipper(Model.ShipperID))
                    {
                        <p style="color:red">Người giao hàng này không thể xoá</p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Đồng ý xoá</button>
                    }
                    <a href="~/Shipper" class="btn btn-warning"><i class="fa fa-ban"></i> Quay Lại</a>
                </div>
            </div>
        </form>
    </div>
</div>


