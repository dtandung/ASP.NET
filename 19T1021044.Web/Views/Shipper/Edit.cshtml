@model _19T1021044.DomainModels.Shipper
@{

}


<div class=" box box-primary">
    <div class=" box-body">
        <form action="~/Shipper/Save" method="post">
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.ShipperID)
            <div class="form-group">
                <label>Tên Người Giao Hàng:</label>
                @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.ShipperName, "", new { @style = "color:#F00" })
            </div>

            <div class="form-group">
                <label>Số Điện Thoại:</label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.Phone, "", new { @style = "color:#F00" })
            </div>


            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-disk"></i> Lưu Dữ Liệu</button>
            <a href="~/Shipper" class="btn btn-warning"><i class="fa fa-ban"></i> Quay Lại</a>
        </form>
    </div>
</div>

