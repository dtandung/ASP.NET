@model _19T1021044.Web.Controllers.Person
@{
    ViewBag.Title = "Input";
}

<h2>Person</h2>
<form action="~/Test/Input" method="post">
    <div class="box box-primary">
        <div class="box-body">
            <div class="form-group">
                <label>Name:</label>
                <input class="form-control" type="text" name="Name" value="@Model.Name" /><br />
            </div>
            <div class="form-group">
                <label>BirthDate:</label>
                <input class="form-control" type="text" name="BirthDate" value="@Model.BirthDate" /><br />
            </div>
            <div class="form-group">
                <label>Salary:</label>
                <input class="form-control" type="text" name="Salary" value="@Model.Salary" /><br />
            </div>
            <button type="submit">Submit</button>
        </div>
    </div>
</form>
