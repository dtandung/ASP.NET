
@{

}

<div class=" box box-primary">
    <div class=" box-body">
        <form action="">
            <div class="form-group">
                <label>Tên Nhà Cung Cấp:</label>
                <input type="text" class="form-control" id="SupplierName" name="SupplierName" autofocus>
            </div>

            <div class="form-group">
                <label>Tên Giao Dịch:</label>
                <input type="text" class="form-control" id="ContactName" name="ContactName" autofocus>
            </div>

            <div class="form-group">
                <label>Địa Chỉ:</label>
                <input type="text" class="form-control" id="Address" name="Address" autofocus>
            </div>

            <div class="form-group">
                <label>Số Điện Thoại:</label>
                <input type="text" class="form-control" id="Phone" name="Phone" autofocus>
            </div>

            <div class="form-group">
                <label>Quốc Gia:</label>
                <select class="form-control" id="Country" name="Country" autofocus>
                    <option value="">--Chọn Quốc Gia--</option>
                    @foreach (var item in _19T1021044.BusinessLayers.CommonDataService.ListOfCountries())
                    {
                        <option value="@item.CountryName">@item.CountryName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Thành Phố:</label>
                <input type="text" class="form-control" id="City" name="City" autofocus>
            </div>

            <div class="form-group">
                <label>Mã Bưu Chính:</label>
                <input type="text" class="form-control" id="PostalCode" name="PostalCode" autofocus>
            </div>
            <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-floppy-disk"></i> Lưu Dữ Liệu</button>
            <a href="~/Supplier" class="btn btn-warning"> Quay Lại</a>
        </form>
    </div>
</div>
