@model _19T1021044.DomainModels.Supplier
@{

}

<div class=" box box-primary">
    <div class=" box-body">
        <form action="~/Supplier/Save" method="post">
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.SupplierID)

            <div class="form-group">
                <label>Tên Nhà Cung Cấp:</label>
                @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.SupplierName, "", new { @style = "color:#F00" })
            </div>

            <div class="form-group">
                <label>Tên Giao Dịch:</label>
                @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.ContactName, "", new { @style = "color:#F00" })
            </div>

            <div class="form-group">
                <label>Địa Chỉ:</label>
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @autofocus = "autofocus" })
            </div>

            <div class="form-group">
                <label>Số Điện Thoại:</label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @autofocus = "autofocus" })
            </div>

            <div class="form-group">
                <label>Quốc Gia:</label>
                @Html.DropDownListFor(m => m.Country,
                                      SelectListHelper.Countries(),
                                      new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Country, "", new { @style = "color:#F00" })
            </div>

            <div class="form-group">
                <label>Thành Phố:</label>
                @Html.TextBoxFor(m => m.City, new { @class = "form-control", @autofocus = "autofocus" })
            </div>

            <div class="form-group">
                <label>Mã Bưu Chính:</label>
                @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", @autofocus = "autofocus" })
            </div>
            <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-floppy-disk"></i> Lưu Dữ Liệu</button>
            <a href="~/Supplier" class="btn btn-warning"> Quay Lại</a>
        </form>
    </div>
</div>
