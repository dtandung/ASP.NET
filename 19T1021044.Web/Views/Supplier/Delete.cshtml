@model _19T1021044.DomainModels.Supplier
@{
	ViewBag.Title = "Xoá Nhà Cung Cấp";
}

<div class="box box-danger">
	<div class=" box-body">
		<form action="~/Supplier/Delete/@Model.SupplierID" method="post" class="form-horizontal">
			<div class="form-group">
				<label class="control-label col-sm-2">Tên Nhà Cung Cấp:</label>
				<p class="col-sm-10 form-control-static">@Model.SupplierName</p>
			</div>

			<div class="form-group">
				<label class="control-label col-sm-2">Tên Giao Dịch:</label>
				<p class="col-sm-10 form-control-static">@Model.ContactName</p>
			</div>

			<div class="form-group">
				<label class="control-label col-sm-2" >Địa Chỉ:</label>
				<p class="col-sm-10 form-control-static">@Model.Address</p>
			</div>

			<div class="form-group">
				<label class="control-label col-sm-2">Số Điện Thoại:</label>
				<p class="col-sm-10 form-control-static">@Model.Phone</p>
			</div>

			<div class="form-group">
				<label class="control-label col-sm-2">Quốc Gia:</label>
				<p class="col-sm-10 form-control-static">@Model.Country</p>
			</div>

			<div class="form-group">
				<label class="control-label col-sm-2">Thành Phố:</label>
				<p class="col-sm-10 form-control-static">@Model.City</p>
			</div>

			<div class="form-group">
				<label class="control-label col-sm-2">Mã Bưu Chính:</label>
				<p class="col-sm-10 form-control-static">@Model.PostalCode</p>
			</div>
			<div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @*<button type="submit" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Đồng ý xoá</button>*@
                    @if (_19T1021044.BusinessLayers.CommonDataService.InUsedSupplier(Model.SupplierID))
                    {
                        <p style="color:red">Nhà cung cấp này không thể xoá</p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Đồng ý xoá</button>
                    }
                    <a href="~/Supplier" class="btn btn-warning"><i class="fa fa-ban"></i> Quay Lại</a>
                </div>
			</div>
		</form>
	</div>
</div>

