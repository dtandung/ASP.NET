@model _19T1021044.Web.Models.SupplierSearchOutput
@{
    Layout = null;
}

<p> Có <b>@string.Format("{0:N0}",Model.RowCount)</b> bản ghi trong tổng số <b>@string.Format("{0:N0}",Model.PageCount)</b> trang</p>
<table class=" table table-bordered table-hover table-striped">
    <thead>
        <tr class="bg-success">
            <th>
                Tên Nhà Cung Cấp
            </th>
            <th>
                Tên Giao Dịch
            </th>
            <th>
                Địa Chỉ
            </th>
            <th>
                Số Điện Thoại
            </th>
            <th>
                Quốc Gia
            </th>
            <th>
                Thành Phố
            </th>
            <th>
                Mã Bưu Chính
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.SupplierName</td>
                <td>@item.ContactName</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.Country</td>
                <td>@item.City</td>
                <td>@item.PostalCode</td>
                <td style="width:90px">
                    <a href="~/Supplier/Edit/@item.SupplierID" class="btn-sm btn-warning" title="Sửa"><i class="glyphicon glyphicon-edit"></i></a>
                    <a href="~/Supplier/Delete/@item.SupplierID" class="btn-sm btn-danger" title="Xoá"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }

    </tbody>
</table>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>

