@model _19T1021044.DomainModels.Employee
@{
    ViewBag.Title = "Xoá Nhân Viên";
}


<div class="box box-danger">
    <div class=" box-body">
        <form action="~/Employee/Delete/@Model.EmployeeID" method="post" class="form-horizontal">


            <div class="form-group">
                <label class="control-label col-sm-2">Họ Đệm:</label>
                <p class="col-sm-10 form-control-static">@Model.LastName</p>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên:</label>
                <p class="col-sm-10 form-control-static">@Model.FirstName</p>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày Sinh:</label>
                <p class="col-sm-10 form-control-static">@Model.BirthDate</p>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <p class="col-sm-10 form-control-static">@Model.Email</p>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ghi Chú:</label>
                <p class="col-sm-10 form-control-static">@Model.Notes</p>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <img style="margin:0px" class="profile-user-img img-responsive img-bordered" src="~/Photos/@Model.Photo">
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (_19T1021044.BusinessLayers.CommonDataService.InUsedEmployee(Model.EmployeeID))
                    {
                        <p style="color:red">Nhân viên này không thể xoá</p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Đồng ý xoá</button>
                    }
                    <a href="~/Employee" class="btn btn-warning"><i class="fa fa-ban"></i> Quay Lại</a>
                </div>
            </div>
        </form>
    </div>
</div>

