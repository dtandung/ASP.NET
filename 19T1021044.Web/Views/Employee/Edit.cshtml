<div class=" box box-primary">
	<div class=" box-body">
		<form action="">
			<div class="form-group">
				<label>Họ:</label>
				<input type="text" class="form-control" id="LastName" name="LastName" autofocus>
			</div>

			<div class="form-group">
				<label>Tên:</label>
				<input type="text" class="form-control" id="FirstName" name="FirstName" autofocus>
			</div>

			<div class="form-group">
				<label>Ngày Sinh:</label>

				<div class="input-group date">
					<div class="input-group-addon">
						<i class="fa fa-calendar"></i>
					</div>
					<input type="text" class="form-control pull-right" id="BirthDate" name="BirthDate">
				</div>
			</div>

			<div class="form-group">
				<label>Email:</label>
				<div class="input-group">
					<span class="input-group-addon"><i class="fa fa-envelope"></i></span>
					<input type="email" class="form-control" placeholder="Email">
				</div>
			</div>

			<div class="form-group">
				<label>Ghi Chú:</label>
				<textarea name="Notes" id="Notes" class="form-control" rows="3" placeholder="Enter ..." autofocus></textarea>
			</div>

			<div class="form-group">
				<label>Ảnh</label>
				<input id="UploadPhoto" name="UploadPhoto" type="file"
					   onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])">
				<img class="img-responsive img-bordered" name="Photo" id="Photo" alt="your image" width="100" height="100" style="margin-top:6px" />
			</div>



			<button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-floppy-disk"></i> Lưu Dữ Liệu</button>
			<a href="~/Employee" class="btn btn-warning"> Quay Lại</a>
		</form>
	</div>
</div>

