@model _19T1021044.DomainModels.Employee
@{

}


<div class=" box box-primary">
    <div class=" box-body">
        <form action="~/Employee/Save"method="post">
            <div class="form-group">
                <input type="hidden" name="SupplierID" value="@Model.EmployeeID" />
                <label>Họ:</label>
                <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" autofocus>
            </div>

            <div class="form-group">
                <label>Tên:</label>
                <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" autofocus>
            </div>

            <div class="form-group">
                <label>Ngày Sinh:</label>

                <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    <input type="text" class="form-control pull-right" id="BirthDate" name="BirthDate" value="@Model.BirthDate"autofocus>
                </div>
            </div>

            <div class="form-group">
                <label>Email:</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    <input type="email" class="form-control" placeholder="Email" value="@Model.Email"autofocus>
                </div>
            </div>

            <div class="form-group">
                <label>Ghi Chú:</label>
                @*<input type="text" class="form-control" id="Notes" name="Notes" value="@Model.Notes"autofocus>*@
                <textarea class="form-control" rows="3" name="Notes" id="Notes"autofocus>@Model.Notes</textarea>
            </div>

            <div class="form-group">
                <label>Ảnh</label>
                <input id="UploadPhoto" name="UploadPhoto" type="file"
                       onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])">
                
            </div>
            <div class="form-group">
                <input type="hidden" name="Photo" value="@Model.Photo" />
                <img class="img-responsive img-bordered" id="Photo" alt="your image" width="100" height="100" style="margin-top:6px" src="@Model.Photo" />
            </div>


            <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-floppy-disk"></i> Lưu Dữ Liệu</button>
            <a href="~/Employee" class="btn btn-warning"> Quay Lại</a>
        </form>
    </div>
</div>

